<script>
document.getElementById('year').textContent = new Date().getFullYear();

const products=[
  {name:'iPhone X', category:'iphone', img:'https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?auto=format&fit=crop&w=800&q=60'},
  {name:'iPhone XR', category:'iphone', img:'https://images.unsplash.com/photo-1512496015851-a90fb38ba796?auto=format&fit=crop&w=800&q=60'},
  {name:'Placas desbloqueadas iPhone XR até 16 Pro Max', category:'placas', img:'https://images.unsplash.com/photo-1587825140708-1b8b4a7f6f8d?auto=format&fit=crop&w=800&q=60'},
  {name:'MacBook 2017', category:'notebook', img:'https://images.unsplash.com/photo-1515879218367-8466d910aaa4?auto=format&fit=crop&w=800&q=60'},
  {name:'Projetor Smart ULTRA HD 720P', category:'projetor', img:'https://images.unsplash.com/photo-1497493292307-31c376b6e479?auto=format&fit=crop&w=800&q=60'},
  {name:'SSD SATA 512GB', category:'ssd', img:'https://images.unsplash.com/photo-1585079546813-1a9a1d2f6b4c?auto=format&fit=crop&w=800&q=60'},
  {name:'SSD NVMe 1TB', category:'nvme', img:'https://images.unsplash.com/photo-1585079546813-1a9a1d2f6b4c?auto=format&fit=crop&w=800&q=60'}
];

const grid=document.getElementById('productGrid');
products.forEach(p=>{
  const el=document.createElement('article'); el.className='card';
  el.innerHTML=`<img src='${p.img}' alt='${p.name}'><div style='font-weight:700'>${p.name}</div><div class='meta'>${p.category}</div><div class='actions'><button class='btn btn-primary' onclick="fillOrder('${p.name}')">Encomendar</button><a class='btn btn-secondary' href='https://wa.me/244954023619?text=${encodeURIComponent('Quero informações sobre '+p.name)}' target='_blank'>WhatsApp</a></div>`;
  grid.appendChild(el);
});

function fillOrder(name){document.querySelector('input[name=produto]').value=name; window.location.hash='#encomenda';}

document.getElementById('orderForm').addEventListener('submit', function(e){
  e.preventDefault();
  const f = new FormData(this);
  const nome = f.get('nome');
  const produto = f.get('produto');
  const qtd = f.get('quantidade')||1;
  const tel = f.get('telefone');
  const msg = f.get('mensagem')||'';
  const text = `Olá, sou ${nome}. Quero encomendar: ${produto} (x${qtd}). Telefone: ${tel}. Observações: ${msg}`;
  window.open('https://wa.me/244954023619?text='+encodeURIComponent(text),'_blank');
  document.getElementById('formMsg').textContent='A abrir WhatsApp com a sua encomenda...';
});
</script>

